<header class="row mt-3" id="main__header">
  <section class="col-md-6">
    <h1 class="h3">
      {{project.code}} 
      <small><a href="/projects/{{project.id}}/chapters">back</a> </small>           
      </h1>
  </section>
  <section class="col-md-6 d-flex justify-content-end ">
    <h2 class="h3">{{project.title}}</h2>
  </section>
</header>

<section class="row mt-5" id="main_content">
  <div class="col-md-6 offset-md-3">
    <form 
      method="POST"
      action="/api/projects/{{project.id}}/chapters/{{chapter.id}}/photos" 
      enctype="multipart/form-data" 
      target="/projects/{{project.id}}/chapters/{{chapter.id}}"
      class="card border-dark mb-3" 
      id="form_add_photo"
      autocomplete="off"
    >
      <header class="card-header bg-transparent border-dark">
        <legend class="text-right">{{title}}</legend>
      <div class="alert alert-warning alert-dismissible fade show" role="alert" data-message="container">
        <p data-message="text"></p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      </header>
      <main class="card-body text-dark">
        <div class="mb-3">
          <label for="number_ch" class="form-label">chapter number</label>
          <input type="number" class="form-control" name="number_ch" id="number_ch">
        </div>         
        <div class="mb-3">
          <label for="number" class="form-label">number</label>
          <input type="number" class="form-control" name="number" id="number">
        </div> 
        <div class="mb-3">
          <label for="caption" class="form-label">caption</label>
          <textarea type="text" class="form-control" name="caption" id="caption"></textarea>
        </div>
      <div class="mb-3">
        <label for="new_image" class="form-label">add image file</label>
        <input class="form-control" type="file" id="new_image" name="new_image">
      </div>        
      </main>
      <footer class="card-footer bg-transparent border-dark text-right">
        <button type="submit" class="btn btn-dark">submit</button>
      </footer>
    </form>
  </div>
</section>
<header class="row mt-3" id="main__header">
  <section class="col-md-6">
    <h1 class="h3">
      {{project.code}}
    </h1>
  </section>
  <section class="col-md-6 d-flex justify-content-end ">
    <h2 class="h3">{{project.title}}</h2>
  </section>
</header>

<form action="  " class="card" id="form">
  <header class="card-header d-flex justify-content-between align-items-center" id="form__header">
    <h2 class="h4">add milestone</h2>
    <fieldset class="d-flex justify-content-start align-items-end" id="form__date">
      <legend class="text-end">date</legend>
      <input type="date" class="form-control" name="date" id="date">
    </fieldset>
  </header>
  <div class="row card-body g-3 align-items-end" id="form__main">
    <div class="col-md-6">
      <label for="title" class="form-label">title</label>
      <input type="text" class="form-control" name="title" id="title">
    </div>
    <div class="col-6">
      <label for="type" class="form-label">type</label>
      <input type="text" class="form-control" name="type" id="type">
    </div>
    <div class="col-12">
      <label for="notes" class="form-label">notes</label>
      <textarea type="text" class="form-control" name="notes" id="notes" placeholder="notes..." rows="5"></textarea>
    </div>
  </div>
  <footer class="card-footer">
    <div class="col-md-12 d-flex justify-content-center">
      <button type="reset" class="btn btn-primary">submit <i
          class="fal fa-plus"></i></button>
      <button type="reset" class="btn btn-primary">reset <i class="fal fa-undo"></i></button>
    </div>
  </footer>
</form>
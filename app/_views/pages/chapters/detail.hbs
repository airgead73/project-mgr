<section class="row mt-5" id="main_content">
  <div class="col-md-12">
    <div class="card mb-3">
      <div class="card-header d-flex justify-content-between">
        <h2 class="h4"><span class="badge bg-dark">Chapter {{chapter.number}}</span></h2>
        <a href="/chapters/update/{{chapter._id}}" class="btn btn-primary text-white">update</a>
      </div>
      <div class="card-body">
        <h5 class="card-title">{{chapter.title}}</h5>
        <p class="card-text">{{chapter.desc}}</p>

      </div>
      <div class="card-footer text-muted">
        <a href="/projects/{{project._id}}/chapters/{{chapter._id}}/photos?sort=number" class="card-link">photos</a>
        <a href="/projects/{{project._id}}/chapters/{{chapter._id}}/figures?sort=number" class="card-link">figures</a>
        <a href="#" class="card-link">features</a>
      </div>
    </div>
  </div>
</section>